<?xml version="1.0" encoding="UTF-8"?>
<project xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xmlns="http://maven.apache.org/POM/4.0.0"
  xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <artifactId>survival2d</artifactId>

  <dependencies>
    <dependency>
      <artifactId>ezyfox-server-core</artifactId>
      <groupId>com.tvd12</groupId>
      <version>${ezy.version}</version>
    </dependency>
    <dependency>
      <groupId>com.tvd12</groupId>
      <artifactId>ezydata-mongodb</artifactId>
      <version>${ezy.version}</version>
    </dependency>
    <dependency>
      <groupId>com.tvd12</groupId>
      <artifactId>ezyfox-boot-autoconfigure</artifactId>
      <version>1.0.5</version>
    </dependency>
  </dependencies>

  <groupId>com.survival2d</groupId>
  <modelVersion>4.0.0</modelVersion>
  <modules>
    <module>survival2d-common</module>
    <module>survival2d-plugin</module>
    <module>survival2d-app-api</module>
    <module>survival2d-app-entry</module>
    <module>survival2d-startup</module>
  </modules>
  <name>survival2d</name>

  <packaging>pom</packaging>
  <parent>
    <artifactId>ezyfox</artifactId>
    <groupId>com.tvd12</groupId>
    <version>1.0.4</version>
  </parent>

  <profiles>
    <profile>
      <build>
        <plugins>
          <plugin>
            <artifactId>maven-antrun-plugin</artifactId>
            <executions>
              <execution>
                <configuration>
                  <target>
                    <ant antfile="${project.basedir}/build.xml"/>
                  </target>
                </configuration>
                <goals>
                  <goal>run</goal>
                </goals>
                <phase>install</phase>
              </execution>
            </executions>
            <groupId>org.apache.maven.plugins</groupId>
            <version>3.0.0</version>
          </plugin>
        </plugins>
      </build>
      <id>export</id>
    </profile>
  </profiles>

  <properties>
    <directory.apps>apps</directory.apps>
    <directory.common>common</directory.common>
    <directory.entries>entries</directory.entries>
    <ezy.boot.version>1.0.4</ezy.boot.version>
    <ezy.client.version>1.1.9</ezy.client.version>
    <ezy.version>1.2.3</ezy.version>
  </properties>
  <url>https://youngmonkeys.org/</url>
  <version>1.0-SNAPSHOT</version>
</project>
