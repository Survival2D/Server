namespace survival2d.flatbuffers;

struct Vector2Struct {
  x: float;
  y: float;
}

struct CircleStruct {
  x: float;
  y: float;
  radius: float;
}

table PlayerTable {
  playerId: int;
  playerName: string;
  position: Vector2Struct;
  rotation: float;
  team: int;
}

table TreeTable {
}

table ContainerTable {
}

table StoneTable {
}

table WallTable {
}

enum GunTypeEnum: byte {
  PISTOL,
  SHOTGUN,
  SNIPER,
}

table GunItemTable {
  type: GunTypeEnum;
  numBullet: int;
}

table BulletItemTable {
  type: GunTypeEnum;
  numBullet: int;
}

enum VestTypeEnum: byte {
  LEVEL_0,
  LEVEL_1
}

table VestItemTable {
  type: VestTypeEnum;
}

enum HelmetTypeEnum: byte {
  LEVEL_0,
  LEVEL_1,
}

table HelmetItemTable {
  type: HelmetTypeEnum;
}

table BandageItemTable {
}

table MedKitItemTable {
}

union ItemUnion {
  BulletItemTable,
  GunItemTable,
  VestItemTable,
  HelmetItemTable,
  BandageItemTable,
  MedKitItemTable
}

union MapObjectUnion {
  //Item
  BulletItemTable,
  VestItemTable,
  HelmetItemTable,
  BandageItemTable,
  MedKitItemTable,
  //Obstacle
  TreeTable,
  ContainerTable,
  StoneTable,
  WallTable
}

table MapObjectTable {
  id: int;
  position: Vector2Struct;
  data: MapObjectUnion;
}

table BulletTable {
  id: int;
  position: Vector2Struct;
  type: GunTypeEnum;
  owner: int;
  direction: Vector2Struct;
}

table HandTable {
}

table GunTable {
  type: GunTypeEnum;
  remainBullets: int;
}

union WeaponUnion {
  HandTable,
  GunTable
}

table WeaponTable {
  data: WeaponUnion;
}

enum ResponseErrorEnum: byte {
  SUCCESS,
  TEAM_NOT_FOUND,
  JOIN_TEAM_ERROR,
  NOT_FOUND_YET,
  UNKNOWN,
}
