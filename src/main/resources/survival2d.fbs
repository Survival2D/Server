struct Vec2 {
  x: double;
  y: double;
}

enum EntityType : byte {
}

table Player {

}

enum GunType {
  NORMAL
}

enum BulletType {
  NORMAL
}

table BulletOnMap {
  owner: string;
  direction: Vec2;
  type: BulletType;
}

table ItemOnMap {
  item: Item;
}

union MapObjectData {
  BulletOnMap,
  ItemOnMap
}

table MapObject {
  id: long;
  position: Vec2;
  data: MapObjectData;
}

table MatchInfoReqeust {
}

table MatchInfoResponse {
  players: [Player];
  mapObjects: [MapObject];
}

table PlayerMoveRequest {
  direction: Vec2;
  rotation: double;
}

table PlayerMoveResponse {
  id: string;
  position: Vec2;
  rotation: double;
}

table PlayerChangeWeaponRequest {
  weaponOffset: byte;
}

table PlayerChangeWeaponResponse {
}

table PlayerAttackRequest {
}

table PlayerAttackResponse {
}

table PlayerDropItemRequest {
}

table PlayerDropItemResponse {
}

union PacketData {
  MatchInfoRequest,
  MatchInfoResponse,
  PlayerMoveRequest,
  PlayerMoveResponse,
  PlayerAttackRequest,
  PlayerAttackResponse,
}

table Packet {
  data: PacketData;
}

root_type Packet;
